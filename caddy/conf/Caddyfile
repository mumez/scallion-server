{
	order webdav before file_server
}

(verify_jwt) {
	reverse_proxy resty:8080 {
		method GET
		rewrite /verify
		header_up X-Forwarded-Method {method}
		header_up X-Forwarded-Uri {uri}
		header_up Authorization {http.request.header.Authorization}
		@good status 2xx
		handle_response @good {
			request_header -Referer
		}
		handle_response {
			copy_response
		}
	}
}

(cors) {
	header Access-Control-Allow-Origin "{args.0}"
	header Access-Control-Allow-Methods "OPTIONS, LOCK, DELETE, PROPPATCH, COPY, MOVE, UNLOCK, PROPFIND, GET, POST, PUT"
	header Access-Control-Allow-Headers "Authorization, X-Requested-With, X-HTTP-Method-Override, Content-Type, Accept, API, Depth"
	header Vary Origin
	@options {
		method OPTIONS
	}
	respond @options 204
}

(to_api) {
	@api {
		# header API true
		path /api/*
	}
	route @api {
		import cors "*"
		import verify_jwt
		uri strip_prefix /api
		reverse_proxy {
			to 192.168.80.133:9088 192.168.80.133:9089
			lb_policy ip_hash
		}
	}
}

:2013 {
	root data
	encode zstd gzip
	@dav {
		path /dav/*
	}
	rewrite /dav /dav/
	route @dav {
		uri strip_prefix /dav
		file_server browse
	}
}

:2014 {
	encode zstd gzip
	root data
	@dav {
		path /dav/*
	}
	route @dav {
		import cors "*"
		import verify_jwt
		webdav {
			prefix /dav
		}
	}
}

:2015 {
	root data
	encode zstd gzip
	templates

	import verify_jwt
	file_server browse
}

:2016 {
	encode zstd gzip
	root data
	@dav {
		path /dav/*
	}
	route @dav {
		import verify_jwt
		webdav {
			prefix /dav
		}
	}
	import to_api
	reverse_proxy localhost:8080
}
